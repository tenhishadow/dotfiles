# general config
## man sshd_config
Host *
  CheckHostIP            no
  Compression            yes
  ForwardAgent           yes
  ForwardX11             no
  HashKnownHosts         no
  PasswordAuthentication yes
  ServerAliveInterval    30
  StrictHostKeyChecking  no
  TCPKeepAlive           yes
  UserKnownHostsFile     /dev/null
  KexAlgorithms          -ecdh-sha2-nistp256,-ecdh-sha2-nistp384,-ecdh-sha2-nistp521,-diffie-hellman-group14-sha256
  HostKeyAlgorithms      -ssh-rsa,-ecdsa-sha2-nistp256
  Ciphers                -chacha20-poly1305@openssh.com
  MACs                   -hmac-sha1,-hmac-sha1-etm@openssh.com,-umac-64-etm@openssh.com,-umac-64@openssh.com,-umac-128@openssh.com


# include custom configs
Include config.d/*
Include conf.d/*
